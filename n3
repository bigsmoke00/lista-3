#!/bin/bash

read -p "Digite o ip: " ip

for ((i=1;i<5;i++)) 
do
	octeto=$(echo $ip | cut -d '.' -f$i)
	octetoBinario=$(echo "obase=2; ibase=10; $octeto" | bc)
	if [ ${#octetoBinario} -lt 8 ]
	then
		echo "Octeto #$i: $octeto em binÃ¡rio `seq -s '' $[8 - ${#octetoBinario}] | tr [:digit:] 0`$octetoBinario"
	else
		echo "Octeto #$i: $octeto em binÃ¡rio $octetoBinario"
	fi
done
